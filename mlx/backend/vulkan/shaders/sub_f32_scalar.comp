#version 450

layout(local_size_x = 256, local_size_y = 1, local_size_z = 1) in;

layout(set = 0, binding = 0) readonly buffer BufferA {
  float values[];
} buffer_a;

layout(set = 0, binding = 1) readonly buffer BufferB {
  float values[];
} buffer_b;

layout(set = 0, binding = 2) writeonly buffer BufferC {
  float values[];
} buffer_c;

layout(push_constant) uniform PushConstants {
  uint size;
} params;

void main() {
  uint idx = gl_GlobalInvocationID.x;
  if (idx >= params.size) {
    return;
  }
  float scalar = buffer_b.values[0];
  buffer_c.values[idx] = buffer_a.values[idx] - scalar;
}
